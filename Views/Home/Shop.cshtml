
@model Purchase

@{
    ViewBag.Title = "Shop";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div>
    @using (Html.BeginForm("Shop", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        //@Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.VodkaPrice, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.VodkaPrice, new { @class = "form-control", @readonly = "true" })

                @Html.ValidationMessageFor(m => m.VodkaPrice)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.VodkaCount, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.VodkaCount, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.VodkaCount)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buy" class="btn btn-default" />
            </div>
        </div>
    }
</div>
